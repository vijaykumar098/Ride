<?xml version="1.0" encoding="utf-8" ?>
<odoo>
    <record id="res_config_settings_rider_integration_view_form" model="ir.ui.view">
        <field name="name">res.config.settings.rider.integration.form</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="base.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='integration']" position="inside">
                <div class="col-12 col-lg-6 o_setting_box">
                    <div class="o_setting_left_pane">
                        <field name="mysql_account" widget="upgrade_boolean"/>
                    </div>
                    <div class="o_setting_right_pane">
                        <label for="mysql_account"/>
                        <div class="text-muted">
                            Use MYSQL Account
                        </div>
                        <div class="content-group">
                            <div class="row mt16">
                                <label for="localhost" class="col-4 col-lg-4 o_light_label"/>
                                <field name="localhost" nolabel="1"/>
                                <label for="mysqluser" class="col-4 col-lg-4 o_light_label"/>
                                <field name="mysqluser" nolabel="1"/>
                                <label for="mysqlpwd" class="col-4 col-lg-4 o_light_label"/>
                                <field name="mysqlpwd" nolabel="1"/>
                                <label for="mysqldb" class="col-4 col-lg-4 o_light_label"/>
                                <field name="mysqldb" nolabel="1"/>
                                 <label for="log_file_path" class="col-4 col-lg-4 o_light_label"/>
                                <field name="log_file_path" nolabel="1"/>
                            </div>
                        </div>
                    </div>
                </div>
            </xpath>
        </field>
    </record>
</odoo>